<div class='container d-flex justify-content-center'>
  <div class= "align-self-center">
    <h2 class='text-center'>Changer de mot de passe</h2>
    <br>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <label>Email</label><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",  class: 'form-control border ' %>
      </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>En attente de confirmation pour : <%= resource.unconfirmed_email %></div>
      <% end %>
      <br>
      <div class="field">
        <label>Mot de passe</label> <i>(laissez vide si vous ne souhaitez pas changer de mot de passe)</i><br />
        <%= f.password_field :password, autocomplete: "new-password",  class: 'form-control border' %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> caractères minimum</em>
        <% end %>
      </div>
      <br>
      <div class="field">
        <label>Confirmation du mot de passe</label><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password",  class: 'form-control border' %>
      </div>
      <br>
      <div class="field">
        <label>Mot de passe actuel</label> <i>(nécessaire pour faire la modification)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password",  class: 'form-control border' %>
      </div>
      <br>
      <div class="actions">
        <%= f.submit "Changer de mot de passe", class: 'btn btn-success btn-md btn-block' %>
      </div>
    <% end %>
    <br><br>
    <h3>Supprimer mon compte</h3>
    <p>Mécontent? <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete,  class: 'btn btn-danger btn-md' %></p>
    
    <%= link_to "Retour", :back, class: 'text-secondary' %>
  </div>
</div>
