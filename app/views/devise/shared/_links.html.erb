<%- if controller_name != 'sessions' %>
	<small>
		<%= link_to "Déjà inscrit ?", new_session_path(resource_name), class: 'text-center text-muted' %><br/>
	</small>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
	<small>
		<%= link_to "Pas encore inscrit ?", new_registration_path(resource_name), class: 'text-center text-muted align-self-center' %>
		<br/>
	</small>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
	<small>
		<%= link_to "Mot de passe oublié ?", new_password_path(resource_name), class: 'text-center text-muted' %>
		<br/>
	</small>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
	<small>
		<%= link_to "Vous n'avez pas reçu d'email de confirmation ?", new_confirmation_path(resource_name), class: 'text-center text-muted' %><br/>
	</small>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
	<small>
		<%= link_to "Vous n'avez pas reçu d'instruction de déblocage ?", new_unlock_path(resource_name), class: 'text-center text-muted' %><br/>
	</small>
<% end %>

<%- if devise_mapping.omniauthable? %>
	<small>
		<%- resource_class.omniauth_providers.each do |provider| %>
			<%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: 'text-center text-muted' %><br/>
		<% end %>
	</small>
<% end %>
