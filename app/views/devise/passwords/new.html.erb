<div class='container d-flex my-5 justify-content-center'>

	<div class=" align-self-center">

		<div class="container bg-primary p-3 shadow mb-4">
			<h2 class='text-white text-center'>Mot de passe oubliÃ© ?</h2>
		</div>

		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post}) do |f| %>

			<%= render "devise/shared/error_messages", resource: resource %>

			<div class="field">
				<label class="mb-0">Email</label><br/>
				<%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control border' %>
			</div>

			<div class="actions">
				<%= f.submit "Recevoir les instructions", class: 'btn btn-success btn-md btn-block my-4' %>
			</div>

		<% end %>

	</div>
</div>
