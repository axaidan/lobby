<div class='container d-flex my-5 justify-content-center'>

	<div class="align-self-center">

		<div class="container bg-primary p-3 shadow mb-4">
			<h2>Changer de mot de passe</h2>
		</div>

		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>

			<%= render "devise/shared/error_messages", resource: resource %>
			<%= f.hidden_field :reset_password_token %>

			<div class="field">
				<%= f.label :password, "Nouveau mot de passe", class: 'mb-0' %><br />
				<% if @minimum_password_length %>
					<em>(<%= @minimum_password_length %> caractÃ¨res minimum)</em><br />
				<% end %>
				<%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
			</div>

			<div class="field">
				<%= f.label :password_confirmation, "Confirmer nouveau mot de passe", class: 'mb-0 mt-3' %><br />
				<%= f.password_field :password_confirmation, autocomplete: "new-password" %>
			</div>

			<div class="actions">
				<%= f.submit "Changer de mot de passe", class: 'btn btn-success btn-md btn-block' %>
			</div>

		<% end %>

		<%= render "ngos/shared/links" %>

	</div>
</div>
