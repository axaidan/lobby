<div class="container my-5 d-flex justify-content-center">

	<div class="align-self-center">

		<div class="container bg-primary p-3 shadow mb-4">
			<h2 class="text-white">Inscription - ONG</h2>
		</div>

		<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

			<%= render "devise/shared/error_messages", resource: resource %>

			<div class="field">
				<%= f.label :email, class: "mb-0" %><br/>
				<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control border" %>
			</div>

			<div class="field">
				<%= f.label :password, 'Mot de passe', class: "mb-0 mt-3" %>
				<% if @minimum_password_length %>
					<em>(<%= @minimum_password_length %> caractères minimum)</em>
				<% end %><br />
				<%= f.password_field :password, autocomplete: "new-password", class: "form-control border" %>
			</div>

			<div class="field">
				<label class="mb-0 mt-3">Confirmation du mot de passe</label>
				<%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control border" %>
			</div>

			<div class="actions">
				<%= f.submit "S'inscrire", class: "btn btn-success btn-md btn-block my-4" %>
			</div>
		<% end %>

		<hr class="my-4" style="width: 75%;">

		<div class="text-center">

			<small>
			<%= link_to "Vous n'êtes pas une association ?", new_user_registration_path, class: "text-center text-muted" %>
			<br/>
			</small>

		<%= render "ngos/shared/links" %>
		</div>

	</div>
</div>
