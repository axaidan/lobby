<div class="container my-5">

	<div class="containe bg-primary p-3 shadow d-flex justify-content-between align-items-center mb-3">
		<h2 class="text-white">Utilisateurs</h2>
	</div>

	<div class="list-group mt-4">
		<% if @users.count == 0 %>
			<div class="list-group-item">
				Il n'y a pas d'Utilisateurs sur le Lobby...
			</div>
		<% else %>
			<div class="table-responsive mt-4 shadow">
				<table class="table table-striped table-sm table-bordered mb-0">
					<thead>
						<tr class="text-center">
							<th>ID</th>
							<th>NOM D'UTILISATEUR</th>
							<th>EMAIL</th>
							<th>ACTIONS</th>
						</tr>
					</thead>
					<tbody>
						<% @users.each do |each_user| %>
							<tr id='<%= each_user.id %>'>
								<td><%= each_user.id %></td>
								<td><%= each_user.username %></td>
								<td><%= each_user.email %></td>
								<td>
									<div class="d-flex justify-content-around align-items-center">
										<%= link_to 'Editer', edit_admin_user_path(each_user.id), class: 'btn btn-outline-secondary' %>
										<%= link_to 'Supprimer', admin_user_path(each_user.id), method: 'delete', data: {confirm: 'Êtes-vous sûr ?'}, remote: true, class: 'btn btn-secondary' %>
									</div>
								</td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		<% end %>
	</div>
</div>
