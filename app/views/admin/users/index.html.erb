<h1>Tous les users</h1>
<div class="list-group">
  <% if @users.count == 0 %>
    <div class="list-group-item">
      Il n'y a pas d'Utilisateurs sur le Lobby...
    </div>
  <% else %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>USERNAME</th>

          <th>EMAIL</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |each_user| %>
          <tr>
            <td><%= each_user.id %></td>
            <td><%= each_user.username %></td>
            <td><%= each_user.email %></td>
            <td><%= link_to 'Editer',  edit_admin_user_path(each_user.id), class: 'btn btn-primary' %></td>
            <td><%= link_to 'Supprimer', admin_user_path(each_user.id), method: 'delete', data: {confirm: 'Êtes-vous sûr ?'}, class: 'btn btn-danger' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
