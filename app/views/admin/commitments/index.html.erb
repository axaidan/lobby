<div class="container my-5">

	<div class="container bg-primary p-3 shadow d-flex justify-content-between align-items-center mb-3">
		<h2 class="text-white">Mouvements</h2>
	</div>

	<%= link_to 'Créer un Mouvement', new_admin_commitment_path, class: 'btn btn-primary shadow' %>
	<div class="list-group">
		<% if @commitments.count == 0 %>
			<div class="list-group-item mt-4">
				Il n'y a pas de Mouvement sur le Lobby...
			</div>
		<% else %>
			<div class="table-responsive mt-4 shadow">
				<table class="table table-striped table-sm table-bordered mb-0">
					<thead>
						<tr class="text-center">
							<th>ID</th>
							<th>TITRE</th>
							<th>UTILISATEURS</th>
							<th>ACTIONS</th>
						</tr>
					</thead>
					<tbody>
						<% @commitments.each do |each_commitment| %>
							<tr id='<%= each_commitment.id %>'>
								<td><%= each_commitment.id %></td>
								<td><%= each_commitment.title %></td>
								<td><%= each_commitment.users.count %></td>
								<td>
									<div class="container d-flex justify-content-around align-items-center">
									<%= link_to 'Editer', edit_admin_commitment_path(each_commitment.id), class: 'btn btn-outline-secondary' %>
									<%= link_to 'Supprimer', admin_commitment_path(each_commitment.id), method: 'delete', data: {confirm: 'Êtes-vous sûr ?'}, remote: true, class: 'btn btn-secondary' %>
									</div>
								</td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		<% end %>
	</div>
</div>
