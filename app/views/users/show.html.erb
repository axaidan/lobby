<h1><%= @user.username %></h1>
<% if flash[:error]  %>
  <div class="alert alert-dismissible alert-danger text-center my-2">
    <a href="#" data-dismiss="alert" class="close">×</a>
  <h4 class="alert-heading"> Error ! </h4>
    <p class="text-center"> <%= flash[:error] %> </p>
  </div>
<% end %>

<% if flash[:success] %>
  <div class="alert alert-dismissible alert-success text-center my-2">
    <a href="#" data-dismiss="alert" class="close">×</a>
  <h4 class="alert-heading"> Success ! </h4>
    <p class="text-center"> <%= flash[:success] %> </p>
  </div>
<% end %>

<h2>Informations générales</h2>
  <p>Email : <%= @user.email %></p>
  <p>First Name : <%= @user.first_name %></p>
  <p>Last Name : <%= @user.last_name %></p>
  <p>Department : <%= @user.department %></p>
  <%= link_to 'Editer votre profil', edit_user_path(@user), class: 'btn btn-secondary' %>
  <%= link_to 'Changez vos paramètres de connexion', edit_user_registration_path, class: 'btn btn-secondary' %>
<h2>Toutes vos adhésions</h2>
  <% if @user_commitments.length > 0%>
    <% @user_commitments.each do |user_commitment| %>
    <p><%= link_to "#{user_commitment.commitment.title}", commitment_path(user_commitment.commitment.id) %> : <small><%= user_commitment.commitment.description %></small></p>
  <% end %>
  <% else %>
    <p>Vous n'avez adhérez à aucun mouvement pour le moment</p>
  <% end %>
<%= link_to 'Adhérer à un mouvement', commitments_path, class: 'btn btn-primary' %>

