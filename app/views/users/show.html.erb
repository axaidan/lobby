<div class="container my-4">
	<div class="container m-auto">
		<div class="row mb-5">
			<div class="col-md-8">
			<h5 class="text-dark card-header border-0"> <%= @user.username %></h5><br/>
				<div class="card-body p-0">
				<table class="table table-sm">
					<tbody>
						<tr><td class="font-weight-bold text-muted border-0">E-mail&#8239:</td><td vor><%= @user.email %></td></tr>
						<tr><td class="font-weight-bold text-muted">Prénom&#8239:</td><td><%= @user.first_name %></td></tr>
						<tr><td class="font-weight-bold text-muted">Nom&#8239:</td><td><%= @user.last_name %></td></tr>
						<tr><td class="font-weight-bold text-muted">Département&#8239:</td><td><%= @user.department %></td></tr>
						<tr><td class="font-weight-bold text-muted">Mouvements&#8239:</td><td><%= @user.commitments.count %></td></tr>
						<tr>
							<td class="font-weight-bold text-muted">Affichage de l'identité&#8239:</td>
							<% if @user.name_display == true %>
								<td>Nom et Prénom</td>
							<% else %>
								<td class="font-weight-bold text-muted">Pseudonyme&#8239:</td>
							<% end %>
						</tr>
						<tr><td class="font-weight-bold text-muted">Inscrit aux emails&#8239:</td>
						<% if @user.accept_mails %>
						<td>Oui</td></tr>
						<% else %>
						<td>Non</td></tr>
						<% end %>
						<tr><td class="font-weight-bold text-muted">Membre depuis&#8239:</td><td><%= @user.created_at.to_date.to_s(:long) %></td></tr>
					</tbody>
				</table>
				</div>
		
				
				
			</div>

			<div class="col-md-4"> 
	
				<div class="mb-2 float-right">
				<%= link_to 'Modifier votre profil', edit_user_path(@user), class: 'btn btn-block btn-secondary' %>
				</div>
				<div class="float-right">
				<%= link_to 'Paramètres de connexion', edit_user_registration_path, class: 'btn btn-block btn-outline-secondary' %>
				</div>
			</div>

		</div>


			<!-- COMMITMENTS TAKEN BY USER -->
		<div class="card border-0 mt-2 ">
			<h1 class=" border-0 text-center text-dark mb-5">
				Vos Mouvements 
			</h1>
			<div class="card-body border-0 p-0">
				<table class="table table-striped table-sm border-0">
					<thead>
						<tr class="border-0 table-primary">
							<th scope="col" class="border-0">Mouvement</th>
							<th scope="col" class="border-0">Description</th>
						</tr>
					</thead>
					<tbody class="border-0">
						<% if @user_commitments.length > 0 %>
							<% @user_commitments.each do |user_commitment| %>
								<tr>
									<td class="border-0">
										<%= link_to "#{user_commitment.commitment.title}", commitment_path(user_commitment.commitment.id) %> :
									</td>
									<td class="border-0">
										<%= user_commitment.commitment.description %>
									</td>
								</tr>
							<% end %>
						<% else %>
							<p>Vous n'avez adhéré à aucun Mouvement pour le moment.</p>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>


		<div>
		<%= link_to 'Adhérer à un Mouvement', commitments_path, class: 'btn btn-secondary' %>
		</div>
	</div>
</div>	

