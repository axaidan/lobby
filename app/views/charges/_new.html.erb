<h1> Vous souhaitez faire un don ? </h1>

<%= form_tag charges_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span>Amount: <%= @amount / 100 %></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button btn-secondary"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Faire un don"
          data-amount=<%= @amount / 100 %>
          data-locale="auto"></script>
<% end %>