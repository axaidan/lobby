<div class="container col-sm-11 m-auto">

	<div class= "container text-center p-2 pt-3 pb-3 border">
		<h4><%= @commitment.title%></h4>
	</div>

	<% if user_signed_in? %>
		<% if current_user.commitments.include?(@commitment) %>
			<%= link_to "Retirer ce Commitment", commitment_user_commitment_path(@commitment.id, @commitment.user_commitments.find_by(user: current_user)), method: 'delete', class: 'btn btn-danger btn-block' %>
		<% else %>
			<%= link_to "Prendre ce Commitment", commitment_user_commitments_path(@commitment.id), method: 'post', class: "btn btn-block btn-success" %>
		<% end %>
	<% end %>

	<div class="container">
		<div class="row">

			<!-- LEFT CELL -->
			<div class="col-sm-4 p-0">
				<div class="card" style="height: 100%;">	
					<div class="card-header">Description</div>
					<div class="card-body">
						<%= @commitment.description %>
					</div>
				</div>
			</div>

			<div class="col-sm-8 border firstline">

				<div class="row">

					<!-- TOP MID CELL -->
					<div class="col-sm-7 p-0">
						<div class="card" style="height: 100%;">	
							<div class="card-header">Chiffres</div>
							<div class="card-body">
								<ul>
									<li>chiffre 1</li>
									<li>chiffre 2</li>
								</ul>
							</div>
						</div>

					</div>

					<!-- TOP RIGHT CELL -->
					<div class="cheese col-sm-5 border p-0" style="height: 100%">
						<div class="card">
							<div class="card-header">Géographiquement</div>
							<div class="card-body">
								<%= pie_chart(@commitment.users.group(:department).count, legend: false) %>
							</div>
						</div>
					</div>

				</div>

				<!-- BOTTOM RIGHT CELL -->
				<div class="grafik col-sm-12 p-0">
					<div class="card m-0">
						<div class="card-header">Evolution du nombre d'Utilisateurs</div>
						<div class="card-body">
							<%= line_chart(@commitment.users_by_day) %>
						</div>
					</div>
				</div>

			</div>
		</div>
	</div>

	<br/><br/>

	<div class= "border text-center pt-2 pb-1 mb-0">
		<h5 class= "align-middle">
			Liste des Users ayant souscrit a ce Commitment
		</h5>
	</div>
	<table class="table table-bordered table-sm mt-0">
		<thead>
			<tr>
				<th scope="col"> Utilisateur </th>
				<th scope="col">Départment</th>
				<th scope="col">Nombre de Commitments</th>
			</tr>
		</thead>
		<tbody>
			<% if @commitment.users.count == 0 %>
				<tr>Il n'y a pas d'User ayant pris ce Commitment</tr>
			<% else %>
				<% @commitment.users.each do |each_user| %>
					<tr>
						<td><%= each_user.display %></td>
						<td><%= each_user.department %></td>
						<td><%= each_user.commitments.count %></td>
					</tr>
				<% end %>
			<% end %>
		</tbody>
	</table>

	<br/><br/>

	<%= link_to "Retour aux Commitments", commitments_path, class: "btn btn-block btn-warning" %>

</div>
