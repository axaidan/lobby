<div class="container mt-4 mb-4">

	<h2 class="text-center pb-4">Tous les Mouvements</h2>

	<div class="col-md-11 m-auto">
		<% if @commitments.count == 0 %>
			<div class="list-group">
				<div class="list-group-item">
					Il n'y a pas de Mouvement actuellement sur le Lobby...
				</div>
			</div>

		<% else %>

			<div class="row">
				<% @commitments.each do |each_commitment| %>

					<div class="col-md-6 p-2">
						<div class="card border-primary commitement text-center" style="min-height: 200px">
							<a href="<%= commitment_path(each_commitment.id)%>" style="text-decoration: none">
								<div class="card-body">
									<h5 class="card-title text-center" style="height: 4rem;"> <%= each_commitment.title %> </h5>
									<p class="card-text text-center"> <%= each_commitment.description %> </p>
									<p class="card-text text-center size:5">Membres inscrits : <%= each_commitment.users.count %> </p>
									<p class='text-center m-0'><%= fa_icon "leaf 2x" %> </p>
									<button class="btn btn-primary text-center mt-3">En savoir plus</button>
								</div>
							</a>
						</div>
					</div>

				<% end %>
			<% end %>
			</div>
	</div>

</div>
